    "symfony/console": "^6.1",
    "twig/twig": "^3.4",
    "filp/whoops": "^2.14",
    "kint-php/kint": "^4.2",
    "kint-php/kint-twig": "^4.0",
    "claviska/simpleimage": "^3.7",
    "nesbot/carbon": "^2.62",
    "symfony/yaml": "^6.1",
    "maximebf/debugbar": "^1.18",
    "phpmailer/phpmailer": "^6.6",
    "dragonmantank/cron-expression": "^3.3",
    "league/flysystem": "^3.0",
    "opis/closure": "^3.6",
    "predis/predis": "^2.0",
    "monolog/monolog": "^3.2"
  },
  "suggest": {
    "ext-redis": "For native redis support instead of using predis"
  },
  "autoload": {
    "psr-4": {
      "Charm\\": "src/"
